{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
    
               
                <img src="{{asset('/uploads/products/' ~ product.picture)}}" style="width:200px"/>

            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.stock }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>
    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
    <form action="{{ path('app_cart_add', {'idProduct': product.id}) }}" method="POST">
        <input type="submit" class="btn btn-success" value="Ajouter au panier" />
    </form>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}

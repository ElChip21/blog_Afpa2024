{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1 class="text-center mb-4">Article</h1>

            <div class="card my-4">
                <div class="card-header">
                    <h2 class="card-title">{{ article.title }}</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <img class="img-fluid" src="{{ asset('/build/images/' ~ article.picture) }}" alt="{{ article.title }}" title="{{ article.title }}">
                        </div>
                        <div class="col-md-6">
                            <p>{{ article.description }}</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <div class="my-3">
                        <a class="btn btn-outline-primary mx-2" href="{{ path('app_article_index') }}">Retour Ã  la liste</a>
                        {% if app.user and 'ROLE_ADMIN' in app.user.getRoles()  %}
                            <a class="btn btn-outline-warning mx-2" href="{{ path('app_article_edit', {'id': article.id}) }}">Modifier</a>
                             {{ include('article/_delete_form.html.twig') }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

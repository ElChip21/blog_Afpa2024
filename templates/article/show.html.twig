{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<div class="row ">
<div class="col-md-10 mx-auto text-center flex-column align-items-center justify-content-center">
    <h1>Article</h1>



<h1>{{article.title}}</h1>

<img class="col-md-4" src="{{ asset('/build/images/' ~ article.picture) }}" alt="{{article.title}}" title="{{article.title}}"><p>{{article.description}}</p>


    <a class="btn btn-primary" href="{{ path('app_article_index') }}">back to list</a>


            {% if app.user and 'ROLE_ADMIN' in app.user.getroles()  %}

             <a class="btn btn-warning" href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
             {{ include('article/_delete_form.html.twig') }}

{% endif %}


        

</div>
</div>

{% endblock %}
